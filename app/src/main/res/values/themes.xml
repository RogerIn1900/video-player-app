<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DaznCodeChallenge" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dazn_background</item>
        <item name="colorPrimaryVariant">@color/dazn_divider</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dazn_background</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/average_sans</item>
