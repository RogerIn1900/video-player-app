<resources>

    <style name="listitem_nicedate" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/dazn_accent</item>
    </style>

    <style name="listitem_subtitle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="listitem_title" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_mini</item>
        <item name="android:layout_marginEnd">@dimen/margin_mini</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>